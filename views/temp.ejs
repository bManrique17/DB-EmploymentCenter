<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<body>
    <form class="" id="empresa" action="/loginEmpresaGO" method="post">
        <input type=text id="rtn" style="display:none" name="rtn" value="" class=form-control aria-describedby=basic-addon1>
    </form>
    <form class="" id="persona" action="/loginPersonaGO" method="post">
        <input type=text id="id" style="display:none" name="id" value="" class=form-control aria-describedby=basic-addon1>
    </form>
    <div action="/index">
        <script type="text/javascript">
            var rtn = -1;
            var id = -1;
            if('<%= tipo %>' == 0){
                rtn = prompt("Ingrese el RTN de la empresa");
                if(rtn == null){
                    window.location = "http://localhost:3000/";
                }else{
                    alert("Bienvenido");
                    $("#rtn").val(rtn);
                    document.forms["empresa"].submit();
                }
            }else{
                id = prompt("Ingrese su numero de identidad");
                if(id == null){
                    window.location = "http://localhost:3000/";
                }else{
                    alert("Bienvenido");
                    $("#id").val(id);
                    document.forms["persona"].submit();
                }
            }
        </script>
    </div>

</body>
